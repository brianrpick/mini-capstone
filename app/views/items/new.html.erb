<h1> New Item!</h1>

<%= form_tag '/items', method: :post do %>
  <div>
    <%= label_tag :product_type, "Product Category"%>:
    <%= text_field_tag :product_type%>
  </div>
  <div>
    <%= label_tag :name, "Product Name"%>:
    <%= text_field_tag :name%>
  </div>
  <div>
    <%= label_tag :description, "Product Description"%>:
    <%= text_field_tag :description%>
  </div>
    <div>
    <%= label_tag :price, "Price"%>:
    <%= text_field_tag :price%>
    </div>
  <div>
    <%= label_tag :image, "Please insert a URL to your picture here"%>:
    <%= text_field_tag :image%>
  </div>
  <div>
    <%= submit_tag "Submit" %>
  </div>
<%end%>
<% form_tag '/suppliers', :method :post do %>
<div>
  <%=label_tag, "Supplier Name:" :name %>
  <%=text_field_tag :name%>
</div>
<div>
  <%=label_tag, "Supplier Email:" :email%>
  <%=text_field_tag :email%>
</div>
<div>
  <%= label_tag, "Supplier Phone Number:" :phone%>
  <%= text_field_tag :phone%>
</div>
<%=submit_tag, "Add New Supplier"%>
<%end%>